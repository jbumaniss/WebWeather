{% extends "base.html.twig" %}

{% block body %}
    <div class="container p-6">
        <h1 class="text-xl-center h1"> Weather in Riga</h1>
    </div>

    <div class="container">
        <ul class="">
            {% for item in data %}
                <div class="d-lg-inline-block p-4 ">
                    <li {% if item.isCurrentHour %} style = "font-size: 20px" class="bg-gradient rounded" {% endif %}
                            class="">Date: {{ item.getDate }}
                    </li>
                    <li {% if item.isCurrentHour %} style = "font-size: 20px" class="bg-gradient rounded" {% endif %} >
                        Temperature: {{ item.getTemperature }}C
                    </li>
                    <li {% if item.isCurrentHour %} style = "font-size: 20px" class="bg-gradient rounded" {% endif %} >
                        Humidity: {{ item.getHumidity }}%
                    </li>
                    <img class="img-thumbnail " alt="Whether Icon" src="https://{{ item.getIcon }}"/>
                </div>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
