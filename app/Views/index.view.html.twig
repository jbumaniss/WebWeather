{% extends "base.html.twig" %}

{% block body %}
    {{ include('inc/hero.html.twig') }}
    {{ include('inc/search.html.twig') }}

    <div class="container text-center text">
        <h1>Past And Current Day Weather In {{ search | capitalize }}</h1>
    </div>

    <div class="container bg-gradient rounded-4 text-center">
        <div class="row-cols-auto">
            {% for item in data %}

                <div class="container-fluid card d-inline-block m-4 bg-primary shadow-card" style="width: 18rem;">
                    <a href="/url">
                        <img class="card-img-top" alt="Whether Icon" src="https://{{ item.getIcon }}"/>
                    </a>

                    <div class="container p-6">
                        <h1 class="text-xl-center h1"> Weather in {{ search | capitalize }}</h1>
                    </div>

                    <ul class="list-group list-group-flush">
                        <li
                                {% if item.isCurrentHour %} style="font-size: 20px" class="list-group-item rounded-top bg-success"
                                {% else %} class="list-group-item bg-secondary rounded-top"
                                {% endif %}
                                class="">Time: {{ item.getDate }}
                        </li>

                        <li
                                {% if item.isCurrentHour %} style="font-size: 20px" class="list-group-item rounded-top bg-success"
                                {% else %} class="list-group-item bg-secondary rounded-top"
                                {% endif %} >
                            Temp: {{ item.getTemperature }}C
                        </li>

                        <li
                                {% if item.isCurrentHour %} style="font-size: 20px" class="list-group-item rounded-top bg-success"
                                {% else %} class="list-group-item bg-secondary rounded-top"
                                {% endif %} >
                            Cloudy: {{ item.getCloud }}%
                        </li>


                        <li
                                {% if item.isCurrentHour %} style="font-size: 20px" class="list-group-item rounded-top bg-success"
                                {% else %} class="list-group-item bg-secondary rounded-top"
                                {% endif %} >
                            Humidity: {{ item.getHumidity }}%
                        </li>

                        <li
                                {% if item.isCurrentHour %} style="font-size: 20px" class="list-group-item rounded-top bg-success mb-2"
                                {% else %} class="list-group-item bg-secondary rounded-top mb-2"
                                {% endif %} >
                            Wind: {{ item.getWindKph }} Kph
                        </li>
                    </ul>

                </div>


            {% endfor %}
        </div>
    </div>

    <div style="height: 100px"></div>
{% endblock %}
