{% extends "base.html.twig" %}

{% block body %}
    {{ include('inc/hero.html.twig') }}
    {{ include('inc/search.html.twig', {'cityNotFound': cityNotFound}) }}

    <div class="container text-center my-4 text-black">
        <h1>Past And Current Day Weather In {{ search | capitalize }}</h1>
    </div>

    <div class="container bg-gradient rounded-4 text-center py-4">
        <div class="row justify-content-center">
            {% for item in data %}
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card bg-primary shadow-card h-100" style="width: 16rem;">
                        <a href="/apiForecast" target="_blank">
                            <img class="card-img-top" alt="Weather Icon" src="https://{{ item.getIcon }}"/>
                        </a>

                        <div class="card-body">
                            <h5 class="card-title">Weather in {{ search | capitalize }}</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item {{ item.isCurrentHour ? 'bg-success' : 'bg-secondary' }}">Time: {{ item.getDate }}</li>
                                <li class="list-group-item {{ item.isCurrentHour ? 'bg-success' : 'bg-secondary' }}">Temp: {{ item.getTemperature }}Â°C</li>
                                <li class="list-group-item {{ item.isCurrentHour ? 'bg-success' : 'bg-secondary' }}">Cloudy: {{ item.getCloud }}%</li>
                                <li class="list-group-item {{ item.isCurrentHour ? 'bg-success' : 'bg-secondary' }}">Humidity: {{ item.getHumidity }}%</li>
                                <li class="list-group-item {{ item.isCurrentHour ? 'bg-success' : 'bg-secondary' }}">Wind: {{ item.getWindKph }} Kph</li>
                            </ul>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div style="height: 100px"></div>
{% endblock %}
